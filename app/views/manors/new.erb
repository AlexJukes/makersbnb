<form action="/manor/new" method="post">
  <label for="name">
    Name: <input type="text" name="name">
  </label>
  <label for="description">
    Description: <input type="textarea" rows="10" cols="50" name="description">
  </label>
  <label for="price">
    Price: <input type="number" name="price" step="any">
  </label>
  <label for="dateFrom">
    Date From: <input type="date" name="dateFrom">
  </label>
  <label for="dateTo">
    Date To: <input type="date" name="dateTo">
  </label>
  <input type="submit" value="Flog it">
</form>

