<h1> Requests </h1>

<h3> Requests I've made </h3>

<ul id="user_requests">
  <% @user_requests.each do |request| %>
  <li> <a href="/manors/<%= request.manor_id %>" id="<%= request.manor_id %>">
    Manor name: <%=request.manor.name %>
    Date requested: <%= request.date_from %>
  </a>
</li>
<% end %>
</ul>

<h3> Requests I've received </h3>

<ul id="received_requests">
  <% @received_requests.each do |request| %>
  <li> <a href="/requests/<%= request.id %>" id="<%= request.id %>" class="request">
    Manor name: <%= request.manor.name %>
    Date requested: <%= request.date_from %>
  </li>
  <% end %>
</ul>
